      (full-name
        (masculine GiNa% FaGMM FaGFF OtNa))
      (short-name
        (masculine GiNa FaGFF)
        (feminine GiNa FaGMM))
      (father-short-name
        (masculine GiNaF FaGFF)
        (feminine GiNaF FaGMF))
      (mother-short-name
        (masculine GiNaM FaGFM)
        (feminine GiNaF FaGMM))))
